{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "lib": ["es6", "es2017.object"],
    "moduleResolution": "node",
    "inlineSourceMap": true,
    "strict": true,
    "noImplicitReturns": true,
    "experimentalDecorators": true,
    "noUnusedLocals": true,
    "allowJs": true,
    "checkJs": false,
    "outDir": "dist",
    "baseUrl": "."
  },
  "exclude": ["node_modules", "dist", "reports", "**/*.spec.ts"]
}
